rccopy () {
	if [ -z ${2} ]; then
		echo "Usage: rccopy Src Remote"
		exit 1
	else
	local Src=${1:-"/ncBackup"}
	local Remote=${2:-"OneDrive:"}
	ls -d */* > InFile
	cd ${Src}
	while read line
	do
		printf "	rclone $line to ${Remote}/${line}..." #		--multi-thread-streams 6
		rclone --progress --buffer-size 2G copyto ${line} ${Remote}/${line}
		results=$?
		if [[ $results -eq 0 ]]; then
			echo "Done"
		else
			echo "Errors ($results)"
		fi
	done < InFile
	rm -f InFile
	fi
}

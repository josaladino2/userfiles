mkuserbash () {
( pushd ~ > /dev/null 2>&1
	printf "$(fg_cyan "	UserFilesbash.tgz")..."
	tar --absolute-names -cvzf UserFilesbash.tgz -X "UserFiles-bashExclude" -T "UserFiles-bashInclude" >mkuserfilesbash.out
	printf "$(fg_white " Done")
"
	popd > /dev/null 2>&1
	dirs -c > /dev/null 2>&1
	) 2>mkuserfilesbk.err
}

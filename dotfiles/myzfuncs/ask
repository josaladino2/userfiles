ask () {
	# Usage: ask "Continue..." "Y"
local prompt="${1:-'Continue...'}"
local prompt2 default reply
	while true; do
		if [ "${2:-}" = "Y" ]; then
			prompt2="Y/n"
			default=Y
		elif [ "${2:-}" = "N" ]; then
			prompt2="y/N"
			default=N
		else
			prompt2="y/n"
			default=
		fi
	echo -n "${prompt} [$prompt2] "
	read reply </dev/tty
	if [ -z "$reply" ]; then
		reply=$default
	fi
	case "$reply" in
		Y*|y*) return 0 ;;
		N*|n*) return 1 ;;
	esac
  done
}

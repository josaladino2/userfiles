psinfo () {
	if [ -z ${1} ] || [ -z ${2} ]; then
		echo "Usage: ${Funcstack[1]} [all|tree|threads|security|pid processname] [ProcessName]"
		return
	else
		case $1 in
			all) ps -U root -u root u ;;
			tree) ps -ejM ;;
			threads) ps -eLf ;;
			security) ps axms ;;
			pid) ps -C ${2} -o pid= ;;
			*)	ps -axww | head -1	
					ps -axww | grep ${1} ;;
		esac
	fi
}

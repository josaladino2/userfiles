mkuserbashbk () {
( pushd ~ > /dev/null 2>&1
	printf "$(fg_cyan "	UserFilesbashbk.tgz")..."
	tar --absolute-names -cvzf UserFilesbashbk.tgz -X "UserFiles-bashExclude" -T "UserFiles-bashInclude" >mkuserfilesbashbk.out
	printf "$(fg_white " Done")
"
	popd > /dev/null 2>&1
	dirs -c > /dev/null 2>&1
	) 2>mkuserfilesbk.err
}

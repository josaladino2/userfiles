forecast () {
_ZIP=$1
if   [ $# = 1 ];then
     printf "$_ZIP
" | egrep '^[0-9][0-9][0-9][0-9][0-9]$' >>/dev/null
     if   [ $? = 0 ];then
          printf "Your 10 Day Weather Forecast as follows:
";
          lynx -dump "http://www.weather.com/weather/print/$_ZIP" | sed -n '/%$/s/\[.*\]//p';
          printf "
"
     elif [ $? = 1 ];then
          printf "Bad ZIP code!
"
     fi
elif [ $# != 1 ];then
     printf "You need to supply a ZIP code!
"
fi
}

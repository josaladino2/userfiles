	alias -s md=atom
	alias -s doc=word
	alias -s docx=word
	alias -s txt=/usr/local/bin/vim
	alias cat="/usr/local/bin/gcat"
	export MANPAGER='most'
# -------------------------------------------------------------------
# some alias settings, just for fun
# -------------------------------------------------------------------
	#alias 'today=calendar -A 0 -f ~/calendar/calendar.mark | sort'
	alias 'today=calendar -A 0 -f /usr/share/calendar/calendar.mark | sort'
# -------------------------------------------------------------------
# sort files in current directory by the number of words they contain
	alias wordy='wc -w * | sort | tail -n10'
	alias lscpu="sysctl -a | grep machdep.cpu"
	export mail="/usr/bin/mail"

	unalias lS 2>/dev/null
	unalias lart 2>/dev/null
	unalias lrt 2>/dev/null
	alias l="gls -hFl ${COLORFLAG}"		# long listing format
	alias la="gls -aF ${COLORFLAG}"		# all files
	alias lr="gls -CFar ${COLORFLAG}"	# list in reverse order
	alias lt="gls -ltFh ${COLORFLAG}" # list by time
	alias ll="gls -hlFa ${COLORFLAG}"	# long listing include hidden
	alias ldot="gls -1d ${COLORFLAG}"	# list only .dot files
	alias lart="gls -1Fcart ${COLORFLAG}"	# list all files 1 column
	alias lrt="gls -1Fcrt ${COLORFLAG}"		# list no .dot files
	alias lc="gls -CFA ${COLORFLAG}"			# list across in columns
	alias ls="gls -1FSh ${COLORFLAG}"		# list single column
	alias lh="man gls"		# list single column
	alias showcolors="spectrum_ls | most"
	alias kh="k --help
	awk '/^# Begin MacOS/{flag=1}/^# End MacOS/{flag=0}flag' ${HOME}/.zsh_machine | sed -e 's/alias /	/' 
	echo \"		kh -- Show this help screen\""  # Show Help
# Begin MacOS zsh k Command
	alias k="k -h"			# list All files & Dirs with no .dot files
	alias ka="k -ah"		# list All Files with .dot files
	alias kc="k -ach"  # list by ctime
	alias kd="k -adh"  # list just directories
	alias kf="k -anh" 	# list just files & links
	alias kr="k -arh"  # list in reverse order
	alias ks="k -aSh"	# list by size
	alias kt="k -ath"	# list by mtime
	alias kaa="k -auh"	# list by atime
# End MacOS zsh k Command
	alias zhelp="run-help ${1}"
	alias chown="gchown"
	alias tar="gtar --no-same-owner"

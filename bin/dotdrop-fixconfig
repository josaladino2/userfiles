#!/usr/local/bin/zsh
cd ~
d=${1}
s=$(readlink ${d})
n=$(echo ${d}|sed -e 's/\.//')
echo ${DOTDROPDIR}
if [ -d "${d}" ]; then
	echo "${d} link removed"
	( cd ${DOTDROPDIR}
	patt="d_${n}:"
	cat config.yaml | sed -e "/${patt}$/{N;N;N;d;}" | sed -e "/d_${n}$/d" #> config.tmp
	#	mv config.tmp config.yaml
	)
elif [ -e "${d}" ]; then
	echo "${d} link removed"
	( cd ${DOTDROPDIR}
	patt="f_${n}:"
	cat config.yaml | sed -e "/${patt}$/{N;N;N;d;}" | sed -e "/f_${n}$/d" #> config.tmp
	#	mv config.tmp config.yaml
	)
else
	echo "${d} not a regular file or directory"
fi

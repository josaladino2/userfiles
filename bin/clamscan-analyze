#!/bin/bash
cat ~/clamscan.out | egrep FOUND | sed "s/\:\ .*$//" | sed "s/^/rm -rf '/" | sed "s/$/'/" > ~/bin/clamscan-clean
chmod 700 ~/bin/clamscan-clean
#cat ~/bin/clamscan-clean | mail -s "clamscan-clean Remove List" joe@bram.net
if [ -s ~/bin/clamscan-clean ]; then
  ~/bin/clamscan-clean | mail -s "clamscan-clean Remove Results" joe@bram.net
fi

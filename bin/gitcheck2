#!/usr/local/bin/zsh
if output=$(git diff --exit-code) && [ -z "$output" ]; then
  fg_green "No unstaged changes"
else 
  fg_red "Unstaged changes"
fi
if output=$(git diff --cached --exit-code) && [ -z "$output" ]; then
  fg_green "No staged and uncommed changes"
else 
  fg_red "Staged Changes Uncommitted"
fi

if output=$(git status --porcelain) && [ -z "$output" ]; then
  echo "No changes to be commited"
else 
  echo "Uncommitted changes"
fi

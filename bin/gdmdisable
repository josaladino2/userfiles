#!/bin/bash
. getfunction f_bgreen f_bred
printf "Stopping Teamviewer Server..."
/bin/systemctl stop teamviewerd.service >/dev/null 2>&1 && \
	f_bgreen "OK" || f_bred "Failed"
printf "Disabling Teamviewer Server..."
/bin/systemctl disable teamviewerd.service >/dev/null 2>&1 && \
	f_bgreen "OK" || f_bred "Failed"
printf "Stopping gdm window manager..."
/bin/systemctl stop gdm.service >/dev/null 2>&1 && \
	f_bgreen "OK" || f_bred "Failed"
printf "Disabling gdm Window Manager..."
/bin/systemctl disable gdm.service >/dev/null 2>&1 && \
	f_bgreen "OK" || f_bred "Failed"

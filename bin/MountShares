#!/bin/bash
if [ -d /Volumes/Users ]; then # /Volumes/Users does NOT exist
	echo "/Volumes/Users/ already mounted"
	ls /Volumes/Users/
else
	echo "Mounting /Volumes/Users/"
	/bin/mkdir -p /Volumes/Users >/dev/null 2>&1 && \
		/sbin/mount_smbfs //joe:Acebal46@Grumpy/Users /Volumes/Users
	sleep 1
	ls /Volumes/Users/
fi

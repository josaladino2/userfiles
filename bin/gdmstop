#!/bin/bash
. getfunction f_bgreen f_bred
printf "Stopping Teamviewer Server..."
/bin/systemctl stop teamviewerd.service >/dev/null 2>&1 && \
	f_bgreen "OK" || f_bred "Failed"
printf "\nStopping gdm window manager..."
sleep 2
/bin/systemctl stop gdm.service >/dev/null 2>&1 && \
	f_bgreen "OK" || f_bred "Failed"
printf "\n"
pkill gdm

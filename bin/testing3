#!/bin/bash
for i in $@
do
	case ${i} in
		--[a-zA-Z]*) action=$(echo ${1:2}) ;;
		-n[0-9]*) N=$(echo ${2:2}) ;;
		-i[a-zA-Z0-9]*) infile=$(echo ${3:2}) ;;
		-o[a-zA-Z0-9]*) outfile=$(echo ${4:2}) ;;
	 esac
done
echo "$action"
echo "$N"
echo "$infile"
echo "$outfile"
#N=${1:-20}
#[ "${2:0:1}" = "<" ] && infile=${2:1} 
#[ "${2:0:2}" = "-i" ] && infile=${2:2} 
#[ $# -ge 1 -a -f "${infile}" ] || infile="/dev/stdin"
#[ "${3:0:1}" = ">" ] && infile=${3:1} 
#[ "${3:0:2}" = "-o" ] && infile=${3:2} 
#[ $# -ge 2 -a -f "${outfile}" ] || outfile="/dev/stdout"
#TN=$(cat ${infile} | wc -l)

#!/bin/bash
#
# Update joe@doc ssh keys
#
SITES="cissa@doc admin@doc root@doc joe@sleepy cissa@sleepy admin@sleepy root@sleepy joe@sneezy cissa@sneezy root@sneezy joe@bram.net bramcom@bram.net root@bram.net"
cat ~/.ssh/id_rsa.pub > ~/.ssh/authorized_keys
for sm in $SITES
do
	echo $sm
	ssh $sm "cat ~/.ssh/id_rsa.pub" | cat >> ~/.ssh/authorized_keys
done

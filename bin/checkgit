#!/usr/local/bin/zsh
UPSTREAM=${1:-'@{u}'}
LOCAL=$(git rev-parse @)
REMOTE=$(git rev-parse "$UPSTREAM")
BASE=$(git merge-base @ "$UPSTREAM")

if [ $LOCAL = $BASE ]; then
    echo "Need to pull"
elif [ $REMOTE = $BASE ]; then
    echo "Need to push"
elif [[ ! $(git status --untracked-files=no --porcelain) ]]; then
    echo "Need to add or commit"
elif [ $LOCAL = $REMOTE ]; then
    echo "Up-to-date"
else
    echo "Diverged"
fi
